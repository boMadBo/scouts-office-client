{
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "strict": true,
    "jsx": "react",
    "esModuleInterop": true,
    "inlineSourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "moduleResolution": "node",
    "baseUrl": "src",
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["src", "src/common/api/.ts", "src/i18n.ts"]
}
